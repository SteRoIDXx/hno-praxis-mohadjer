---
import MainLayout from '../layouts/MainLayout.astro';

const team = [
  {
    name: 'Dr. med. Claude Mohadjer',
    role: 'Facharzt für HNO-Heilkunde',
    description: 'Praxisinhaber. Facharzt für Hals-, Nasen- und Ohrenheilkunde mit Zusatzbezeichnungen Allergologie und Akupunktur.',
    initials: 'CM'
  },
  {
    name: 'R. Eilfeldt',
    role: 'Medizinische Fachangestellte',
    description: 'Anmeldung, Patientenbetreuung und Praxisorganisation.',
    initials: 'RE'
  },
  {
    name: 'T. Sept',
    role: 'Medizinische Fachangestellte',
    description: 'Assistenz bei Untersuchungen und Behandlungen.',
    initials: 'TS'
  },
  {
    name: 'G. Özbek',
    role: 'Medizinische Fachangestellte',
    description: 'Hördiagnostik und Allergietestung.',
    initials: 'GÖ'
  },
  {
    name: 'A. Blum',
    role: 'Medizinische Fachangestellte',
    description: 'Praxisorganisation und Patientenbetreuung.',
    initials: 'AB'
  }
];
---

<MainLayout title="Praxisteam" description="Lernen Sie das Team der HNO-Praxis Dr. med. Claude Mohadjer in Neu Wulmstorf kennen – erfahrene Fachkräfte für Ihre HNO-Gesundheit.">
  <h1>Unser Praxisteam</h1>

  <p class="text-gray-700 leading-relaxed mb-8">
    Unser engagiertes Team sorgt dafür, dass Sie sich in unserer Praxis gut aufgehoben fühlen. Wir legen großen Wert auf eine freundliche und kompetente Betreuung.
  </p>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {team.map((member) => (
      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
        <div class="flex items-center gap-4 mb-3">
          <div class="bg-blue-600 text-white rounded-full w-12 h-12 flex items-center justify-center font-bold text-sm">
            {member.initials}
          </div>
          <div>
            <h3 class="font-semibold text-blue-900 m-0">{member.name}</h3>
            <p class="text-sm text-blue-600 m-0">{member.role}</p>
          </div>
        </div>
        <p class="text-gray-600 text-sm">{member.description}</p>
      </div>
    ))}
  </div>
</MainLayout>
