---
import Navigation from '../components/Navigation.astro';
import Sprechzeiten from '../components/Sprechzeiten.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import NotfallBanner from '../components/NotfallBanner.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import '../styles/global.css';

interface Props {
  title: string;
  hero?: boolean;
  description?: string;
}

const { title, hero = false, description = 'HNO-Praxis Dr. med. Claude Mohadjer in Neu Wulmstorf - Ihr Facharzt für Hals-, Nasen- und Ohrenheilkunde.' } = Astro.props;
const pageTitle = `${title} | HNO-Praxis Dr. med. Claude Mohadjer`;
const isHome = Astro.url.pathname === '/' || Astro.url.pathname === '';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "MedicalBusiness",
  "name": "HNO-Praxis Dr. med. Claude Mohadjer",
  "description": "Facharzt für Hals-, Nasen- und Ohrenheilkunde in Neu Wulmstorf bei Hamburg. Diagnostik, Therapie, Operationen, Allergologie, Schlafmedizin und Akupunktur.",
  "url": "https://hno-praxis-mohadjer.de",
  "telephone": "+494070050022",
  "faxNumber": "+494070050023",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Bahnhofstr. 29",
    "addressLocality": "Neu Wulmstorf",
    "postalCode": "21629",
    "addressCountry": "DE"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 53.4627,
    "longitude": 9.7862
  },
  "openingHoursSpecification": [
    { "@type": "OpeningHoursSpecification", "dayOfWeek": "Monday", "opens": "08:00", "closes": "12:00" },
    { "@type": "OpeningHoursSpecification", "dayOfWeek": "Monday", "opens": "15:00", "closes": "18:00" },
    { "@type": "OpeningHoursSpecification", "dayOfWeek": "Tuesday", "opens": "08:00", "closes": "12:00" },
    { "@type": "OpeningHoursSpecification", "dayOfWeek": "Tuesday", "opens": "15:00", "closes": "18:00" },
    { "@type": "OpeningHoursSpecification", "dayOfWeek": "Wednesday", "opens": "10:00", "closes": "12:00" },
    { "@type": "OpeningHoursSpecification", "dayOfWeek": "Thursday", "opens": "08:00", "closes": "12:00" },
    { "@type": "OpeningHoursSpecification", "dayOfWeek": "Thursday", "opens": "15:00", "closes": "19:00" },
    { "@type": "OpeningHoursSpecification", "dayOfWeek": "Friday", "opens": "08:00", "closes": "12:00" }
  ],
  "medicalSpecialty": "Otolaryngology",
  "priceRange": "$$",
  "image": "https://hno-praxis-mohadjer.de/favicon.svg",
  "sameAs": []
};
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,300;0,400;0,600;0,700;1,400&display=swap" rel="stylesheet" />
    <title>{pageTitle}</title>
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </head>
  <body class="min-h-screen flex flex-col bg-gray-50">
    <!-- Notfall-Banner -->
    <NotfallBanner />

    <!-- Top Bar -->
    <div class="bg-blue-900 text-blue-100 text-xs sm:text-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 flex items-center justify-between h-9">
        <div class="flex items-center gap-4">
          <span class="hidden sm:inline-flex items-center gap-1.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Bahnhofstr. 29, 21629 Neu Wulmstorf
          </span>
        </div>
        <a href="tel:0407005022" class="inline-flex items-center gap-1.5 text-blue-100 hover:text-white no-underline transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          040 / 700 50 22
        </a>
      </div>
    </div>

    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-blue-100 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <div class="flex items-center justify-between h-16 lg:h-20">
          <a href="/" class="group flex items-center gap-3 no-underline">
            <div class="bg-blue-600 text-white rounded-lg p-2 group-hover:bg-blue-700 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 lg:h-8 lg:w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <div>
              <h1 class="text-lg lg:text-xl font-bold text-blue-900 m-0 leading-tight group-hover:text-blue-700 transition-colors">
                HNO-Praxis Dr. med. Claude Mohadjer
              </h1>
              <p class="text-xs lg:text-sm text-gray-500 m-0">
                Facharzt für Hals-, Nasen- und Ohrenheilkunde
              </p>
            </div>
          </a>

          <!-- Mobile Hamburger Button -->
          <button
            id="menu-toggle"
            class="lg:hidden p-2 rounded-md text-gray-600 hover:text-blue-600 hover:bg-blue-50 transition-colors"
            aria-label="Menü öffnen"
            aria-expanded="false"
          >
            <svg id="icon-open" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg id="icon-close" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div id="mobile-nav" class="lg:hidden hidden border-t border-blue-100">
        <Navigation />
      </div>
    </header>

    <!-- Hero Section (Homepage only) -->
    {hero && (
      <section class="bg-gradient-to-br from-blue-600 via-blue-700 to-blue-800 text-white py-12 lg:py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 text-center">
          <h2 class="text-2xl lg:text-4xl font-bold text-white mb-3">
            Willkommen in unserer HNO-Praxis
          </h2>
          <p class="text-blue-100 text-lg lg:text-xl max-w-2xl mx-auto mb-6">
            Kompetente und einfühlsame Behandlung für Ihre Hals-, Nasen- und Ohrengesundheit in Neu Wulmstorf.
          </p>
          <a
            href="tel:0407005022"
            class="inline-flex items-center gap-2 bg-white text-blue-700 font-semibold px-6 py-3 rounded-lg hover:bg-blue-50 transition-colors no-underline shadow-lg"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Termin vereinbaren: 040 / 700 50 22
          </a>
        </div>
      </section>
    )}

    <!-- Main Content Area -->
    <div class="flex-1 max-w-7xl mx-auto w-full px-4 sm:px-6 py-6 lg:py-8">
      <div class="flex flex-col lg:flex-row gap-6 lg:gap-8">
        <!-- Sidebar Left: Navigation (Desktop only) -->
        <aside class="hidden lg:block w-64 flex-shrink-0">
          <div class="sticky top-24">
            <h2 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-3 px-3">Navigation</h2>
            <Navigation />
          </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 min-w-0">
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 lg:p-8">
            {!isHome && <Breadcrumb title={title} />}
            <slot />
          </div>
        </main>

        <!-- Sidebar Right: Sprechzeiten -->
        <aside class="lg:w-64 flex-shrink-0">
          <div class="lg:sticky lg:top-24">
            <Sprechzeiten />
          </div>
        </aside>
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-blue-900 text-white mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 py-8 lg:py-10">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Left: Contact -->
          <div>
            <h3 class="text-sm font-semibold text-blue-200 uppercase tracking-wider mb-3">Kontakt</h3>
            <p class="text-blue-100 text-sm leading-relaxed mb-3">
              HNO-Praxis Dr. med. Claude Mohadjer<br />
              Bahnhofstr. 29<br />
              21629 Neu Wulmstorf
            </p>
            <div class="flex flex-col gap-1.5 text-sm">
              <a href="tel:0407005022" class="text-blue-100 hover:text-white no-underline inline-flex items-center gap-2 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                Telefon: 040 / 700 50 22
              </a>
              <span class="text-blue-100 inline-flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2z" />
                </svg>
                Telefax: 040 / 700 50 23
              </span>
            </div>
          </div>

          <!-- Right: Quick Links -->
          <div>
            <h3 class="text-sm font-semibold text-blue-200 uppercase tracking-wider mb-3">Schnellzugriff</h3>
            <div class="grid grid-cols-2 gap-x-4 gap-y-1.5 text-sm">
              <a href="/praxisbeschreibung" class="text-blue-100 hover:text-white no-underline transition-colors">Praxisbeschreibung</a>
              <a href="/allgemeine-hno-leistungen" class="text-blue-100 hover:text-white no-underline transition-colors">HNO-Leistungen</a>
              <a href="/operative-eingriffe" class="text-blue-100 hover:text-white no-underline transition-colors">Operative Eingriffe</a>
              <a href="/allergien" class="text-blue-100 hover:text-white no-underline transition-colors">Allergien</a>
              <a href="/schlaf-apnoe" class="text-blue-100 hover:text-white no-underline transition-colors">Schlaf-Apnoe</a>
              <a href="/akupunktur-und-schmerztherapie" class="text-blue-100 hover:text-white no-underline transition-colors">Akupunktur</a>
              <a href="/schwindel" class="text-blue-100 hover:text-white no-underline transition-colors">Schwindel</a>
              <a href="/curriculum-vitae" class="text-blue-100 hover:text-white no-underline transition-colors">Curriculum Vitae</a>
              <a href="/praxisteam" class="text-blue-100 hover:text-white no-underline transition-colors">Praxisteam</a>
              <a href="/impressum" class="text-blue-100 hover:text-white no-underline transition-colors">Impressum</a>
              <a href="/datenschutz" class="text-blue-100 hover:text-white no-underline transition-colors">Datenschutz</a>
            </div>
          </div>
        </div>
        <div class="border-t border-blue-800 mt-6 pt-4 text-center text-blue-300 text-xs">
          &copy; {new Date().getFullYear()} HNO-Praxis Dr. med. Claude Mohadjer. Alle Rechte vorbehalten.
        </div>
      </div>
    </footer>

    <!-- Scroll to Top Button -->
    <ScrollToTop />

    <!-- Mobile Menu Toggle Script -->
    <script>
      const menuToggle = document.getElementById('menu-toggle');
      const mobileNav = document.getElementById('mobile-nav');
      const iconOpen = document.getElementById('icon-open');
      const iconClose = document.getElementById('icon-close');

      menuToggle?.addEventListener('click', () => {
        const isOpen = mobileNav?.classList.contains('hidden');
        mobileNav?.classList.toggle('hidden');
        iconOpen?.classList.toggle('hidden');
        iconClose?.classList.toggle('hidden');
        menuToggle.setAttribute('aria-expanded', String(isOpen));
      });
    </script>
  </body>
</html>
